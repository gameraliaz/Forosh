<UserControl x:Class="Forosh.MVVM.Views.FooterUserInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Forosh.MVVM.Views"
             xmlns:modle="clr-namespace:Forosh.MVVM.Models"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">
    <StackPanel Orientation="Horizontal" Height="30">
        <TextBlock Text="{Binding Path=User, Source=FullName}" FontSize="18" FontFamily="B Koodak" Foreground="{StaticResource PrimaryToolSolidBrush}"/>
        <TextBlock Text="{Binding Path=User, Source=LoginTime}" FontSize="18" FontFamily="B Koodak" Foreground="{StaticResource PrimaryToolSolidBrush}"/>
    </StackPanel>
</UserControl>
